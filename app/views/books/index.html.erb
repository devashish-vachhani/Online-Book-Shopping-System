<p style="color: green"><%= notice %></p>

<h1>Books</h1>
<div class="container">
  <div class="row">
    <div class="col-md-2">
      <%= render 'books/search_form' %>
    </div>
    <div class="col-md-10">
      <% if can? :create, Book %><%= link_to "Create a new book", new_book_path, class: 'btn btn-primary float-end'%><% end %>
      <table class="table table-striped table-hover">
        <thead class="thead-dark">
        <tr>
          <th>Name</th>
          <th>Author</th>
          <th>Publisher</th>
          <th>Price</th>
          <th>Stock</th>
          <th>Average rating</th>
        </tr>
        </thead>

        <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= book.name %></td>
            <td><%= book.author %></td>
            <td><%= book.publisher %></td>
            <td>$<%= book.price %></td>
            <td><%= book.stock %></td>
            <td><%= book.average_rating %></td>
            <td><%= link_to 'Show', book_path(book), class:'btn btn-primary btn-sm' %></td>
            <% if user_signed_in? %><td><%= link_to_if book.stock > 0, 'Buy', new_transaction_path(:book_id => book.id), class: 'btn btn-primary btn-sm' %></td><% end %>
            <% if user_signed_in? %><td><%= link_to 'Write a review', new_review_path(:book_id => book.id), class: 'btn btn-primary btn-sm' %></td><% end %>
            <% if can? :update, book %><td><%= link_to 'Edit', edit_book_path(book), class:'btn btn-primary btn-sm' %></td><% end %>
            <% if can? :delete, book %><td><%= button_to "Delete", book, form: { data: { turbo_confirm: "Are you sure?" } }, method: :delete, class: "btn btn-danger btn-sm" %></td><% end %>
          </tr>
        <% end %>
        </tbody>
      </table>
      <%= link_to "Back to dashboard", authenticated_root_path %>
    </div>
  </div>
</div>
