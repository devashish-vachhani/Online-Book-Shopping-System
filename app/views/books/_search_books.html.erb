<%= search_form_for @q do |f| %>
  <div class="form-group">
    <%= f.label :author_cont, "Author" %>
    <%= f.search_field :author_cont, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :average_rating_gteq, "Average rating" %>
    <%= f.number_field :average_rating_gteq, class: 'form-control', step: 0.01 %>
  </div>
  <%= link_to "Clear", request.path, class: "btn btn-default" %>
  <%= f.submit "Search", class: 'btn btn-primary btn-sm' %>
<% end %>