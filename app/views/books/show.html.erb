<p style="color: green"><%= notice %></p>
<div class="card">
  <div class="card-body">
    <%= render @book %>
    <% if can? :update, Book %><%= link_to 'Edit', edit_book_path(@book), class:'btn btn-primary btn-sm' %><% end %>
    <% if can? :delete, Book %><%= button_to "Delete", @book, form: { data: { turbo_confirm: "Are you sure?" } }, method: :delete, class: "btn btn-danger btn-sm" %><% end %>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-2">
      <%= render 'books/search_reviews' %>
    </div>
    <div class="col-md-10">
      <table class="table table-striped table-hover">
        <thead class="thead-dark">
        <tr>
          <th>Username</th>
          <th>Rating</th>
          <th>Review</th>
        </tr>
        </thead>
        <tbody>
          <% @reviews.each do |review| %>
            <tr>
              <td><%= review.user.username%></td>
              <td><%= review.rating %></td>
              <td><%= review.review %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to "Back to books", books_path %>
    </div>
  </div>
</div>