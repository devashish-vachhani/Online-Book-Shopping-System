<h1>Users</h1>
<%= link_to "Create a new user", new_admins_user_path, class: 'btn btn-primary float-end'%>
<table id="users" class="table table-striped table-hover">
  <thead class="thead-dark">
  <tr>
    <th>Username</th>
    <th>Name</th>
    <th>Email</th>
    <th>Address</th>
    <th>Phone number</th>
    <th>Credit card number</th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.address %></td>
      <td><%= user.phone_number %></td>
      <td><%= user.credit_card_number %></td>
      <td><%= link_to "Edit", edit_admins_user_path(user), class: "btn btn-primary btn-sm" %></td>
      <td><%= button_to "Delete", [:admins, user], data: { turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger btn-sm" %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= link_to "Back to dashboard", authenticated_root_path, class: 'btn btn-secondary' %>
