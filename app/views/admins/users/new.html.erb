<div class="card">

  <div class="card-header">
    <h4>Create a user account</h4>
  </div>

  <div class="card-body">

    <%= form_for([:admins, @user]) do |f| %>

      <div class="row g-3">
        <div class="col-12">
          <%= f.text_field :name, autofocus: true, class:"form-control", placeholder: "Name" %>
        </div>
        <div class="col-12">
          <%= f.email_field :email, autofocus: true, class:"form-control", placeholder: "Email" %>
        </div>
        <div class="col-12">
          <%= f.text_field :address, autofocus: true, class:"form-control", placeholder: "Address" %>
        </div>
        <div class="col-12">
          <%= f.text_field :phone_number, autofocus: true, class:"form-control", placeholder: "Phone number" %>
        </div>
        <div class="col-12">
          <%= f.text_field :credit_card_number, autofocus: true, class:"form-control", placeholder: "Credit card number" %>
        </div>
        <div class="col-md-4">
          <%= f.text_field :username, autofocus: true, class:"form-control", placeholder: "Username" %>
        </div>
        <div class="col-md-4">
          <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder: "Password" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        </div>
        <div class="col-md-4">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder: "Confirm password" %>
        </div>
        <div class="col-12">
          <%= f.submit "Create account", class:"btn btn-primary" %>
        </div>
    <% end %>
    <br/>
    <%= link_to "Back", :back %>
    </div>
  </div>
</div>