<h1>Cart</h1>
<% if @shopping_cart.present? and @shopping_cart_items.present? %>
  <%= button_to "Empty cart", shopping_cart_path, method: :delete, form: { data: { turbo_confirm: "Are you sure?" } }, class: "float-end btn btn-secondary" %>
  <table class="table table-striped table-hover">
    <thead class="thead-dark">
    <tr>
      <th>Book</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
    </thead>
    <tbody>
    <% @shopping_cart_items.each do |shopping_cart_item| %>
      <tr>
        <td><%= shopping_cart_item.item.name %></td>
        <td><%= shopping_cart_item.quantity %></td>
        <td>$<%= shopping_cart_item.price_in_dollars %></td>
        <td><%= button_to "Delete", shopping_cart_item_path(shopping_cart_item), data: { turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
    </tbody>
    <tfoot>
    <tr>
      <td colspan="3"><strong>Total:</strong></td>
      <td><%= @shopping_cart.total %></td>
    </tr>
    </tfoot>
  </table>
<% else %>
  <div class="col-md-12 text-center">
    <p>Your cart is empty</p>
  </div>
<% end %>
<div class="row">
  <div class="col-md-6 text-md-start">
    <%= link_to "Go to books", books_path %>
  </div>
  <div class="col-md-6 text-md-end">
    <% if @shopping_cart.present? and @shopping_cart_items.present? %><%= link_to 'Proceed to checkout', new_transaction_path, class: 'btn btn-warning' %><% end %>
  </div>
</div>