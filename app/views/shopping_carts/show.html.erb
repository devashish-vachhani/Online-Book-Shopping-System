<h1>Cart</h1>
<% if @cart.present? and @cart_items.present? %>
  <table class="table table-striped table-hover">
    <thead class="thead-dark">
    <tr>
      <th>Book</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
    </thead>
    <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.item.name %></td>
        <td><%= cart_item.quantity %></td>
        <td>$<%= cart_item.price_in_dollars %></td>
        <td><%= button_to "Remove", shopping_cart_item_path(cart_item), method: :delete, form: { data: { turbo_confirm: "Are you sure?" } }, class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
    </tbody>
    <tfoot>
    <tr>
      <td colspan="3"><strong>Total:</strong></td>
      <td><%= @cart.total %></td>
    </tr>
    </tfoot>
  </table>
<% else %>
  <div class="col-md-12 text-center">
    <p>Your cart is empty</p>
  </div>
<% end %>
<div class="row">
  <div class="col-md-6 text-md-start">
    <%= link_to "Back to books", books_path %>
  </div>
  <div class="col-md-6 text-md-end">
    <% if @cart.present? and @cart_items.present? %><%= link_to 'Proceed to checkout', new_transaction_path, class: 'btn btn-primary' %><% end %>
  </div>
</div>