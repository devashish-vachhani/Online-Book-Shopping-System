<%= form_with(model: transaction, html: {class: "row g-3", "data-turbo": false}) do |form| %>
  <% if transaction.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(transaction.errors.count, "error") %> prohibited this transaction from being saved:</h2>

      <ul>
        <% transaction.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    <div class="col-12">
    <%= form.label :transaction_number %>
    <%= form.text_field :transaction_number, class: 'form-control', value: @transaction_number, readonly: true %>
    </div>

    <div class="col-12">
        <%= form.label :address %>
        <%= form.text_area :address, class: 'form-control', value: current_user.address %>
    </div>

    <div class="col-md-6">
      <%= form.label :phone_number %>
      <%= form.text_field :phone_number, class: 'form-control', value: current_user.phone_number %>
      <em>(10 characters)</em>
    </div>

    <div class="col-md-6">
      <%= form.label :credit_card_number %>
      <%= form.text_field :credit_card_number, class: 'form-control', value: current_user.credit_card_number %>
      <em>(16 characters)</em>
    </div>

  <div class="col-md-12 d-flex justify-content-center">
    <%= form.submit "Place your order", class: 'btn btn-warning' %>
  </div>

  <div class="col-md-12 d-flex justify-content-start">
    <%= link_to "Back to cart", shopping_cart_path, class: 'btn btn-secondary' %>
  </div>

<% end %>
