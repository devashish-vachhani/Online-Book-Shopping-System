<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "row g-3", "data-turbo": false }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <div class="col-md-6">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, class:"form-control" %>
  </div>
  <div class="col-md-6">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, class:"form-control"%>
  </div>
  <div class="col-12">
    <%= f.label :address %>
    <%= f.text_area :address, autofocus: true, class:"form-control" %>
  </div>
  <div class="col-md-6">
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number, autofocus: true, class:"form-control" %>
    <em>(10 characters)</em>
  </div>
  <div class="col-md-6">
    <%= f.label :credit_card_number %>
    <%= f.text_field :credit_card_number, autofocus: true, class:"form-control" %>
    <em>(16 characters)</em>
  </div>
  <div class="col-md-4">
    <%= f.label :username %>
    <%= f.text_field :username, autofocus: true, class:"form-control" %>
  </div>
  <div class="col-md-4">
    <% if @user.new_record? %>
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
    <% else %>
      <%= f.label :password, "New Password (leave blank to keep current password)" %>
      <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
    <% end %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
  </div>
  <div class="col-md-4">
    <% if @user.new_record? %>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
    <% else %>
      <%= f.label :password_confirmation, "New Password confirmation" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
    <% end %>
  </div>
  <div class="col-12">
    <%= f.submit "#{submit_text}", class:"btn btn-primary" %>
  </div>
<% end %>